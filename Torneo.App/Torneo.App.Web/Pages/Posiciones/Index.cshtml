@page
@model Torneo.App.Frontend.Pages.Posiciones.IndexModel
@{
}
@if (Model.ErrorEliminar)
{
    <div class="alert alert-danger" role="alert">
        No se pudo eliminar la posicion
    </div>
}
<a class="btn btn-primary" asp-page="./Create">Crear posicion</a>
<h1>Listado de posicion</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            @*<th scope="col">Acciones</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var posicion in Model.posiciones)
        {
            <tr>
                <th scope="row">@posicion.Id</th>
                <td>@posicion.Nombre</td>
                <td>
                    <a class="btn btn-outline-light" asp-page="./Details" asp-route-id="@posicion.Id">
                        Detalle
                    </a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@posicion.Id">
                        Editar
                    </a>
                   @* @if(posicion.Nombre.Count ==0)
                    {
                        <form method="post" class="d-inline">
                            <button asp-page-handler="Delete" asp-route-id="@posicion.Id"
                            onclick="return confirm('Esta Seguro de eliminar la posicion?')" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    }*@
                </td>
            </tr>
        }
    </tbody>
</table>