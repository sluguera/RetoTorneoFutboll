@page
@model Torneo.App.Frontend.Pages.Municipios.IndexModel
@{
}
@if (Model.ErrorEliminar)
{
    <div class="alert alert-danger" role="alert">
        No se pudo eliminar el Municipio
    </div>
}
<center>
    <h1>Listado de municipios</h1>
<table class="table table-bordered border-IndianRed " , border="2" , style="width: 50%">
    <thead>
        <tr bgcolor="#808080">
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones     <a class="btn btn-primary" asp-page="./Create">Crear municipio</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var municipio in Model.municipios)
        {
            <tr bgcolor="#F8F9F9">
                <th scope="row">@municipio.Id</th>
                <td>@municipio.Nombre</td>
                <td>
                    <a class="btn btn-outline-light" asp-page="./Details" asp-route-id="@municipio.Id">
                        Detalle
                    </a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@municipio.Id">
                        Editar
                    </a>
                    @if (municipio.Equipos.Count == 0)
                    {
                        <form method="post" class="d-inline">
                            <button asp-page-handler="Delete" asp-route-id="@municipio.Id"
                            onclick="return confirm('Esta Seguro de eliminar el municipio?')" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
</center>