@page
@model Torneo.App.Frontend.Pages.Jugadores.EditModel
@{
}
<h1>Editar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="jugador.Numero"></label>
        <input asp-for="jugador.Numero" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EquipoSelected"></label>
        <select asp-for="EquipoSelected" asp-items="@Model.EquipoOptions" name="idEquipo" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PosicionSelected">Posicion</label>
        <select asp-for="PosicionSelected" asp-items="@Model.PosicionOptions" name="idPosicion" class="form-control">
        </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">Editar Posicion</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
