<!DOCTYPE html>
<html lang="en">

<head>  
    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Torneo Futball</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />  
    <link rel="stylesheet" href="~/Torneo.App.Frontend.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="..\imagenes\imagen1.jpg" width="150" height="150" alt="logo">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><strong> - TORNEO DE FUTBOL - </strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">                            
                            <a class="btn btn-outline-primary" asp-area="" asp-page="/DTs/Index"><strong>Dir.Tecnico</strong></a>
                        </li>
                        <li class="nav-item">                            
                            <a class="btn btn-outline-primary" asp-area="" asp-page="/Equipos/Index"><strong>Equipo</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-area="" asp-page="/Jugadores/Index"><strong>Jugador</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-area="" asp-page="/Municipios/Index"><strong>Municipio</strong></a>
                        </li>
                         <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-area="" asp-page="/Partidos/Index"><strong>Partido</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-area="" asp-page="/Posiciones/Index"><strong>Posicion</strong></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <center> 
            <a href="https://localhost:7142/autores"> &copy; 2022 - ON LINE DEVELOPERS</a>
            </center>   
         </div>
    </footer>
    <script src="~/lib/jquery/dist
/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>